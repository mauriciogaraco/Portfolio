---
import Layout from "../layouts/Layout.astro";
import SocialPill from "../components/SocialPill.astro";
---

<Layout title="404 - Page Not Found">
  <main
    class="relative grid min-h-screen place-items-center bg-zinc-950 px-6 py-24 sm:py-32 lg:px-8"
  >
    <div class="text-center">
      <p class="text-base font-semibold text-yellow-500">404</p>
      <h1 class="mt-4 text-3xl font-bold tracking-tight text-white sm:text-5xl">
        Page not found
      </h1>
      <p class="mt-6 text-base leading-7 text-gray-400">
        Sorry, we couldn’t find the page you’re looking for.
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <SocialPill
          href={import.meta.env.BASE_URL}
          class="rounded-md bg-yellow-500 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-yellow-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-yellow-500"
        >
          Go back home
        </SocialPill>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    animation: fadeIn 1s ease-in-out;
  }
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
