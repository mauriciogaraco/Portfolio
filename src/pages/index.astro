---
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import Layout from "../layouts/Layout.astro";

import GithubIcon from "../components/icons/GithubIcon.astro";
import EmaiIcon from "../components/icons/EmaiIcon.astro";

import Experience from "../components/icons/Experience.astro";
import BriefCaseIcon from "../components/icons/BriefCaseIcon.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Footer from "../components/Footer.astro";
import Projects from "../components/Projects.astro";

import Download from "../components/Download.astro";
import DownloandIcon from "../components/icons/DownloandIcon.astro";
import HandSvg from "../components/icons/HandSvg.astro";
---

<Layout
  title="Portafolio de Mauricio García Acosta - Desarrollador y programador Web"
>
  <main role="main" class="px-4">
    <div id="top"></div>

    <!-- HERO -->
    <SectionContainer class="pt-16 pb-20 md:pt-24">
      <div class="flex flex-col gap-6 md:flex-row md:items-center md:gap-8">
        <div class="max-w-[720px]">
          <h1
            class="text-white text-3xl md:text-5xl font-bold tracking-tight flex flex-wrap items-center gap-3 pb-3"
          >
            <HandSvg class="text-yellow-200/90" size={48} /> Hey, I’m Mauricio

            <Badge
              id="ready-badge"
              href="mailto:mauriciogaraco@gmail.com?subject=Opportunity"
              variant="success"
              size="md"
              dot
            >
              Ready to work
            </Badge>
          </h1>

          <p class="text-base md:text-lg opacity-90 leading-relaxed">
            <span class="font-medium"
              >Front-end-leaning Full-Stack Developer</span
            >
            <span class="text-yellow-200/90"> (2+ years).</span>
            <span class="">
              I craft fast, accessible web &amp; mobile products—responsive
              layouts, tasteful micro-interactions, and design-system-driven UI
            </span>
            <span class="text-red-200/90"
              >Based in Havana; open to remote and relocation.</span
            >
          </p>

          <nav
            aria-label="Primary actions"
            class="flex gap-3 md:gap-4 mt-6 flex-wrap"
          >
            <Download>
              <DownloandIcon />
              Download CV
            </Download>

            <SocialPill
              newTab={true}
              href="https://github.com/mauriciogaraco/"
              aria-label="Visit my GitHub"
            >
              <GithubIcon class="size-6" />
              GitHub
            </SocialPill>

            <SocialPill
              newTab={true}
              href="mailto:mauriciogaraco@gmail.com?subject=Hello%20Mauricio"
              aria-label="Send me an email"
            >
              <EmaiIcon class="size-6" />
              mauriciogaraco@gmail.com
            </SocialPill>
          </nav>
        </div>
      </div>
    </SectionContainer>

    <!-- EXPERIENCE -->
    <SectionContainer id="experience">
      <h2
        class="text-2xl md:text-3xl font-semibold mb-8 flex items-center gap-3 tracking-tight"
      >
        <span class="opacity-80"
          ><BriefCaseIcon class="size-8 md:size-10" /></span
        >
        Experience
      </h2>
      <Experience />
    </SectionContainer>

    <!-- PROJECTS -->
    <SectionContainer id="projects">
      <h2
        class="text-2xl md:text-3xl font-semibold mb-8 flex items-center gap-3 tracking-tight"
      >
        <span class="opacity-80"><CodeIcon class="size-8 md:size-10" /></span>
        Selected Projects
      </h2>

      <!-- grid responsiva; evita gaps irregulares -->
      <div class="flex justify-between flex-wrap">
        <Projects />
      </div>
    </SectionContainer>
  </main>

  <!-- CONTACT -->
  <div id="contact" class="mt-10">
    <Footer />
  </div>
</Layout>
