---
import SocialPill from "./SocialPill.astro";
import EmaiIcon from "./icons/EmaiIcon.astro";
import TelegramIcon from "./icons/TelegramIcon.astro";
import WhatsAppIcon from "./icons/WhatsAppIcon.astro";

const year = new Date().getFullYear();
---

<footer
  role="contentinfo"
  class="mt-14 w-full border-t border-white/10 bg-black/20 backdrop-blur-sm"
>
  <div
    class="mx-auto max-w-[1120px] px-4 py-6 md:py-7 flex flex-col gap-4 md:flex-row md:items-center md:justify-between"
  >
    <div class="text-sm leading-snug text-white/70">
      <p class="font-medium text-white/90">Open to work — let’s talk.</p>
      <p class="opacity-80">
        © {year} Mauricio García. All rights reserved.
      </p>
    </div>

    <nav aria-label="Contact" class="flex flex-wrap items-center gap-2">
      <SocialPill
        href="mailto:mauriciogaraco@gmail.com?subject=Hello%20Mauricio"
      >
        <EmaiIcon class="size-5" />
        mauriciogaraco@gmail.com
      </SocialPill>

      <SocialPill
        isOutLink={true}
        href="https://wa.me/qr/C2LAGVUXKDDUO1"
        isOutLink={true}
      >
        <WhatsAppIcon class="size-5" />
        WhatsApp
      </SocialPill>

      <SocialPill href="https://t.me/Mauricio_dev" isOutLink={true}>
        <TelegramIcon class="size-5" />
        Telegram
      </SocialPill>

      <a
        href=`${import.meta.env.BASE_URL}/#top`
        class="ml-1 text-sm hover:text-yellow-100">Back to top ↑</a
      >
    </nav>
  </div>
</footer>
