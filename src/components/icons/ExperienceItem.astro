---
import SocialPill from "../SocialPill.astro";

interface Props {
  title: string;
  description: string[]; // <-- Updated to an array of strings
  link?: string;
  date: string;
}

const { title, description, link, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-sky-200/70">{date}</time
>
<h3 class="text-lg font-semibold text-yellow-200">
  {title}
</h3>

<ul
  class="list-disc list-outside mb-4 text-base font-normal text-gray-200 text-balance pl-5"
>
  {description.map((item) => <li>{item}</li>)}
</ul>

{
  link && (
    <div class="w-40">
      <SocialPill href={link}>
        Learn more
        <svg
          class="w-3 h-3 ms-2 rtl:rotate-180"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"
          />
        </svg>
      </SocialPill>
    </div>
  )
}
