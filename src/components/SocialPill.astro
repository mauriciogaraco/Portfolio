---
interface Prop {
  href?: string;
}
const { href } = Astro.props;
---

<a
  href={href}
  class="bg-white/5
  rounded-full border
  flex justify-center items-center gap-x-2
  text-xs lg:text-base
  transition
  border-white/10 hover:scale-110
   py-1 px-2 lg:py-2 lg:px-4 hover:bg-white/10"
>
  <slot />
</a>
